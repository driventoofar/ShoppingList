@page "/list"

<h3>List</h3>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Person</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>@item.Item</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>

@code {

    private ListItem[] items;

    protected override async Task OnInitializedAsync()
    {
        items = new List<ListItem>()
        {
            new ListItem
            {
                Item = "Apple",
                Name = "Andrew"
            }
        }.ToArray();
    }

    public class ListItem
    {
        public string Item { get; set; }

        public string Name { get; set; }
    }
}
